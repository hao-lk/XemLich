<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeItemEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/botron_event">

        <TextView
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:id="@+id/tvTitleEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="sdfsdfsdf"
            android:textAlignment="center"
            android:textColor="#262626"
            android:textSize="22sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvTimeEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleEvent"
            android:gravity="center_vertical"
            android:paddingLeft="23dp"
            android:paddingRight="15dp"
            android:text="sdfsdfsdf"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvDayEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleEvent"
            android:layout_toRightOf="@+id/tvTimeEvent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="sdfsdfsdf"
            android:textColor="@color/red"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgEventDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:src="@drawable/ic_delete" />

</RelativeLayout>